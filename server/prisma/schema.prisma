generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  name   String
  places Places[]
}

model Places {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  address     String
  description String
  user        Users  @relation(fields: [userId], references: [id])
  userId      String
  imgUrl      String
}
